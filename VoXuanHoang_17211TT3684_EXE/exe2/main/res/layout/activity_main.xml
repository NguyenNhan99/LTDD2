<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/nen"
    tools:context=".MainActivity"
    android:weightSum="5.5"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <TextView
            android:layout_marginLeft="10dp"
            android:background="@drawable/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="LẮC SÚC XẮC"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/imgxucxac2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/s1"
            />

        <ImageView
            android:id="@+id/imgxucxac1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/x1" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/tai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chẳn"
                    android:textSize="25sp"/>

                <RadioButton
                    android:id="@+id/siu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lẽ"
                    android:textSize="25sp"/>
                    />
            </RadioGroup>

        </LinearLayout>

        <Button
            android:background="@drawable/bnttinh"
            android:layout_marginTop="10dp"
            android:onClick="ondk"
            android:id="@+id/btnNhap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chơi lại"
            android:textSize="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center"
        android:orientation="vertical"
        >
        <TextView

            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tv"
            android:gravity="center"
            android:text="Lịch sử chơi"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.RecyclerView

                android:id="@+id/recyclerView"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.RecyclerView

                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/recyclerView2" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        >
        <Button
            android:background="@drawable/doihinh"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/thoat"
            android:onClick="onthoat"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="320dp"
            />
    </LinearLayout>
</LinearLayout>