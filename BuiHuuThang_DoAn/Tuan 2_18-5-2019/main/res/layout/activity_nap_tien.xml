<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.layouy_pj.NapTien"
    android:background="@drawable/bakground"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_arrow_back_black_24dp"/>
    <TextView
        android:gravity="center"
        android:text="Hệ Thống Nạp Tiền"
        android:textSize="25sp"
        android:textColor="#F1EDED"
        android:background="@drawable/tv"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="100dp" />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/gate10"
            android:src="@drawable/gate10"
            android:layout_marginLeft="5dp"
            android:layout_width="120dp"
            android:layout_height="100dp" />
        <ImageView
            android:id="@+id/gate20"
            android:src="@drawable/gate20"
            android:layout_marginLeft="20dp"
            android:layout_width="120dp"
            android:layout_height="100dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/gate50"
            android:src="@drawable/gate50"

            android:layout_width="120dp"
            android:layout_height="100dp" />
        <ImageView
            android:id="@+id/gate100"
            android:src="@drawable/gate100"
            android:layout_marginLeft="20dp"
            android:layout_width="120dp"
            android:layout_height="100dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/gate200"
            android:src="@drawable/gate200"

            android:layout_width="120dp"
            android:layout_height="100dp" />
        <ImageView
            android:id="@+id/gate500"
            android:src="@drawable/gate500"
            android:layout_marginLeft="20dp"
            android:layout_width="120dp"
            android:layout_height="100dp" />
    </LinearLayout>

</LinearLayout>
