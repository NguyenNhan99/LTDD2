<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.layouy_pj.Nap"
    android:background="@drawable/bakground"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/back2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_arrow_back_black_24dp"/>
    <TextView
        android:gravity="center"
        android:text="Hệ Thống Nạp Tiền"
        android:textSize="25sp"
        android:textColor="#F1EDED"
        android:background="@drawable/tv"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="100dp" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF003B"
            android:text="Nhập mã thẻ"/>
        <EditText
            android:id="@+id/nap"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/nutnap"
            android:background="@drawable/button_frist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nạp"/>
    </LinearLayout>
</LinearLayout>
