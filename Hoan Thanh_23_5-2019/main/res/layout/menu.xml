<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bakground"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:gravity="right">
        <ImageButton
            android:id="@+id/luatchoi"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_levels_game" />
        <ImageButton
            android:id="@+id/sound"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_sound_on_main" />
    </LinearLayout>

    <ImageView
        android:id="@+id/anhtieude01"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/tieude02" />
    <ImageView
        android:id="@+id/anhtieude02"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:src="@drawable/tieude01"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="-25dp"
        />
    <ImageView
        android:id="@+id/anhmenu"
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        />
    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/choigame"
        android:textColor="#F50303"
        android:text="CHƠI GAME"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:background="@drawable/button_frist"/>
    <Button
        android:id="@+id/xephang"
        android:layout_marginTop="20dp"
        android:textColor="#F50303"
        android:text="XẾP HẠNG"
        android:textSize="25sp"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/button_frist"/>
    <Button
        android:layout_marginTop="20dp"
        android:textColor="#F50303"
        android:text="THOÁT"
        android:textSize="25sp"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/button_frist"/>
</LinearLayout>