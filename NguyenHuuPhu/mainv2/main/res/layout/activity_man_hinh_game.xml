<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bakground"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.layouy_pj.ManHinhGameActivity">
    <ImageButton
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="31dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dip"
        android:background="@drawable/button_back_levels" />
    <LinearLayout
        android:id="@+id/coins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="-40dp"
        android:orientation="horizontal"
        android:padding="2dip" >

        <ImageView
            android:id="@+id/coinsImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/coins" />
        <TextView
            android:id="@+id/coinsX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="x "
            android:textSize="16sp" />
        <TextView
            android:id="@+id/coinsValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50"
            android:textSize="24sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="-35dp"
        android:text="adasd" />
    <TextView
        android:id="@+id/cauhoi"
        android:gravity="center"
        android:textSize="25sp"
        android:background="@drawable/tv"
        android:layout_marginTop="90dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="150dp" />
    <ImageView
        android:id="@+id/imggame"
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="50dp"
        android:src="@drawable/nenbg"/>
    <TextView
        android:id="@+id/txtSC"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số câu"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        >
        <Button
            android:id="@+id/traloi01"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:background="@drawable/button"/>
        <Button
            android:id="@+id/traloi02"
            android:layout_marginLeft="30dp"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:background="@drawable/button"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center"
        >
        <Button
            android:id="@+id/traloi03"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:background="@drawable/button"/>
        <Button
            android:id="@+id/traloi04"
            android:layout_marginLeft="30dp"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:background="@drawable/button"/>
    </LinearLayout>
</LinearLayout>
